<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:id="@+id/top"
        android:background="@drawable/top"
        android:gravity="center"
        android:orientation="horizontal">
        <!--android:id="@+id/btn_home_recom"-->


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <!--android:id="@+id/btn_home_recom"-->

            <ImageButton
                android:id="@+id/btn_my_reco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:src="@drawable/m1"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />


            <ImageButton
                android:id="@+id/btn_other_reco"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/m2"
                android:padding="0sp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_menuList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/m3" />

        <ImageButton
            android:id="@+id/btn_orderedList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/m4" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_menuList1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/m3"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo_camera_black_24dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#3B240B"
        android:gravity="center"
        android:orientation="horizontal">
        <!--android:id="@+id/btn_home_recom"-->


    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/name_text"
        android:gravity="center_horizontal"

        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/age_text"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>

